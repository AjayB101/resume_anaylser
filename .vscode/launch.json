{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI (api.py)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "args": [
        "api:app",          // ðŸ‘ˆ now you can drop the 'backend.' prefix
        "--reload",
        "--port", "8000"
      ],
      "cwd": "${workspaceFolder}/backend",  // ðŸ‘ˆ set working directory to backend/
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    }
  ]
}
